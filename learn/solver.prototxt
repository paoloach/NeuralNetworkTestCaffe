# reduce the learning rate after 8 epochs (4000 iters) by a factor of 10

# The train/test net protocol buffer definition
net: "net.prototxt"
test_iter: 2
test_interval: 40000
display: 10000
base_lr: 0.001
weight_decay: 0.0005
lr_policy: "fixed"
# The maximum number of iterations
max_iter: 5000000
solver_mode: GPU
type: "Adam"

